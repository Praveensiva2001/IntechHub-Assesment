@model EmployeeAttendanceManagementSystem.Models.Employee

<h2>Create Employee</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input asp-for="Email" class="form-control" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>


    @* <div class="form-group"> *@
    @*     <label for="Department">Department</label> *@
    @*     <input asp-for="Department" class="form-control" /> *@
    @*     <span asp-validation-for="Department" class="text-danger"></span> *@
    @* </div> *@


    <div class="form-group">
        <label for="Department">Department</label>
        <select asp-for="Department" class="form-control" asp-items="@(ViewData["Departments"] as IEnumerable<SelectListItem>)">
            <option value="">Select Department</option>
        </select>
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>





    <button type="submit" class="btn btn-primary">Add Employee</button>
    <input type="button" value="View All Employee" onclick="location.href='@Url.Action("Index", "Employee")'" />


</form>
